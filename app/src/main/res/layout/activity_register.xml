<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="607dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_id"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="아이디"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="127dp" />

            <EditText
                android:id="@+id/first_id_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="아이디를 입력 하세요."
                android:inputType="text"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="160dp" />

            <TextView
                android:id="@+id/first_pwd"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="비밀 번호"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/first_pwd_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="비밀 번호를 입력 하세요."
                android:inputType="textPassword"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="이름"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="이름을 입력 하세요."
                android:inputType="textPersonName"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="나이"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/age_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="나이를 입력하세요."
                android:inputType="number"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="주소"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="주소를 입력하세요."
                android:inputType="text"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="성별"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="299dp"
                android:layout_height="42dp"
                android:gravity="right"></Spinner>

            <TextView
                android:id="@+id/phone"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="핸드폰번호"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="핸드폰번호를 입력하세요."
                android:inputType="phone"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <Button
                android:id="@+id/regist_btn"
                android:layout_width="275dp"
                android:layout_height="64dp"
                android:text="회원 가입"
                android:layout_gravity="center"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="633dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>